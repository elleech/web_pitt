<!DOCTYPE html>
<html>
  <head>
    <title>WebArticles</title>
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/css/bootstrap.min.css"
      integrity="sha384-GJzZqFGwb1QTTN6wy59ffF1BuGJpLSa9DkKMp0DgiMDm4iYMj70gZWKYbI706tWS"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/stylesheet/blogs.css" />
  </head>

  <% include ../share/header %>

  <div class="container" style="margin-top: 30px">
    <div class="row">
      <h3 class="col-md-10">All blogs</h3>
      <p class="col-md-2">
        <a class="btn btn-secondary btn-large" href="/blogs/new"
          >Add New Blog</a
        >
        <br /><br />
      </p>
    </div>

    <div class="row">
      <% blogs.forEach(function(blog) { %>
      <div class="col-md-4" style="background-color: transparent; border: 0px">
        <div id="blog-card">
          <img src="<%= blog.image %>" class="card-img-top" />
          <div class="card-body">
            <p class="card-text">
              <small class="text-muted"><%= blog.time%></small>
            </p>
            <h5 class="card-title"><%= blog.title %></h5>
            <p class="card-text">
              <%= blog.description.split(/\s+/).slice(0,15).join(" ")%>...
            </p>
            <p class="card-text">
              <small class="text-muted"
                >Submitted by <%= blog.author.username %> &nbsp;&nbsp;</small
              ><a
                class="text-dark"
                style="float: right; margin-right: 0.5rem"
                href="/blogs/<%= blog._id %>"
                >Read More</a
              >
            </p>
          </div>
        </div>
      </div>
      <% }); %>
    </div>
  </div>

  <% include ../share/footer %>
</html>
