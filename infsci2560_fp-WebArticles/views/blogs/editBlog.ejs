<html>
    <head>
        <title>WebArticles</title>
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/css/bootstrap.min.css" integrity="sha384-GJzZqFGwb1QTTN6wy59ffF1BuGJpLSa9DkKMp0DgiMDm4iYMj70gZWKYbI706tWS" crossorigin="anonymous">
        <link rel="stylesheet" href="/stylesheet/blogs.css">
    </head>
    <body>

<% include ../share/header %>


<div class="container" style="margin-top: 100px">
    <h2 class="newBlog-header" style="text-align:center">Edit: <%= blog.title %></h1>
     
            <form action="/blogs/<%= blog._id %>?_method=PUT" method="POST">
               <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="title">Blog Title</label>
                    <input type="text" class="form-control" id="title" value="<%= blog.title %>" name="title">
                </div>
            
                <div class="form-group col-md-12" >
                    <label for="image">Blog Image</label>
                    <input type="text" class="form-control" id="image" value="<%= blog.image %>" name="image">
                </div>
              
                <div class="form-group col-md-12">
                    <label for="description">Blog Text</label>
                    <textarea class="form-control" id="description" placeholder="Enter description" name="description" style="height: 300px;white-space: pre-wrap;white-space: pre-line"><%= blog.description %></textarea>
                </div>
              
              <div class="form-row">
                <div class="form-group" style="padding:20px">
                    <button id="submit" class="btn btn-info btn-block" type="submit">Submit</button>
                </div>
                
               <div style="padding:20px">
                <a href="/blogs/<%= blog._id %>"><button class="btn btn-secondary btn-block" type="button" >Go Back</button></a>
                </div>
                     
              </div>
    
            </form>
              
</div>


<% include ../share/footer %>

