            %>
            <li class="nav-item"><a class="nav-link disabled" href="/#"> Welcome, <i><%= currentUser.username %></i>.</a></li>
            <li class="nav-item"><a class="nav-link" href="/user"> Admin Homepage</a></li>
            <li class="nav-item"><a class="nav-link" href="/logout">Logout</a></li>
            <% 
            } 
            }
            %>
