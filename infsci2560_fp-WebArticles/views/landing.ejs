    <div class="container">
      <% if(error && error.length > 0) { %>
      <div class="alert alert-danger">
        <p><%= error %></p>
      </div>
      <% } %>
      
      <% if(success && success.length > 0) { %>
      <div class="alert alert-success">
        <p><%= success %></p>
      </div>
      <% } %>
    </div>


